{
  "name": "Database Writer Workflow",
  "nodes": [
    {
      "parameters": {},
      "id": "workflow-trigger",
      "name": "Execute Workflow Trigger",
      "type": "n8n-nodes-base.executeWorkflowTrigger",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "INSERT INTO public_comment_analysis \\n(comment_id, group_id, original_comment_text, main_agent_summary, main_agent_recommendation, legal_assessment, scientific_assessment)\\nVALUES \\n('{{ $json.comment_id }}', '{{ $json.group_id }}', '{{ $json.original_comment_text }}', '{{ $json.main_agent_summary }}', '{{ $json.main_agent_recommendation }}', {{ $json.legal_assessment ? \\\"'\\\" + $json.legal_assessment + \\"'\\\" : 'NULL' }}, {{ $json.scientific_assessment ? \\\"'\\\" + $json.scientific_assessment + \\"'\\\" : 'NULL' }})\\nON CONFLICT (comment_id) \\nDO UPDATE SET\\n  group_id = EXCLUDED.group_id,\\n  original_comment_text = EXCLUDED.original_comment_text,\\n  main_agent_summary = EXCLUDED.main_agent_summary,\\n  main_agent_recommendation = EXCLUDED.main_agent_recommendation,\\n  legal_assessment = EXCLUDED.legal_assessment,\\n  scientific_assessment = EXCLUDED.scientific_assessment,\\n  updated_at = CURRENT_TIMESTAMP;",
        "options": {}
      },
      "id": "postgres-insert",
      "name": "Insert/Update Analysis Result",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.4,
      "position": [450, 300],
      "credentials": {
        "postgres": {
          "id": "postgres-credentials",
          "name": "PostgreSQL"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "// Log database write result\\nconst success = !$input.item.json.error;\\n\\nreturn {\\n  json: {\\n    success: success,\\n    comment_id: $('Execute Workflow Trigger').item.json.comment_id,\\n    message: success ? 'Analysis saved to database' : 'Failed to save to database',\\n    timestamp: new Date().toISOString()\\n  }\\n};"
      },
      "id": "format-db-response",
      "name": "Format Database Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [650, 300]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "success-check",
              "leftValue": "={{ $json.success }}",
              "rightValue": false,
              "operator": {
                "type": "boolean",
                "operation": "equals"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "check-db-error",
      "name": "Check for Errors",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [850, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "https://your-logging-endpoint.com/errors",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "comment_id",
              "value": "={{ $json.comment_id }}"
            },
            {
              "name": "error",
              "value": "={{ $json.message }}"
            },
            {
              "name": "timestamp",
              "value": "={{ $json.timestamp }}"
            }
          ]
        },
        "options": {}
      },
      "id": "log-error",
      "name": "Log Error (Optional)",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1050, 200]
    }
  ],
  "pinData": {},
  "connections": {
    "Execute Workflow Trigger": {
      "main": [
        [
          {
            "node": "Insert/Update Analysis Result",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Insert/Update Analysis Result": {
      "main": [
        [
          {
            "node": "Format Database Response",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Format Database Response": {
      "main": [
        [
          {
            "node": "Check for Errors",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Check for Errors": {
      "main": [
        [
          {
            "node": "Log Error (Optional)",
            "type": "main",
            "index": 0
          }
        ],
        []
      ]
    }
  },
  "active": false,
  "settings": {
    "executionOrder": "v1"
  },
  "versionId": "1",
  "id": "database-writer-workflow",
  "meta": {
    "instanceId": "your-instance-id"
  },
  "tags": []
}
